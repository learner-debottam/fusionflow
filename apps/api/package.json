{
  "name": "@fusionflow/api",
  "version": "0.1.0",
  "description": "FusionFlow API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t fusionflow-api .",
    "docker:push": "docker push fusionflow-api",
    "seed": "tsx src/scripts/seed.ts",
    "migrate": "tsx src/scripts/migrate.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",

    "@fastify/jwt": "^8.0.0",
    "@fastify/websocket": "^8.0.0",
    "@fastify/static": "^7.0.0",
    "@fastify/compress": "^7.0.0",
    "@fastify/accepts": "^5.0.2",
    "@fastify/multipart": "^8.0.0",
    "@fastify/formbody": "^7.0.0",
    "@fastify/url-data": "^5.0.0",
    "@fastify/request-context": "^4.0.0",
    "@fusionflow/common": "workspace:*",
    "@fusionflow/otlp": "workspace:*",
    "fastify": "^4.24.3",
    "zod": "^3.22.4",

    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-prometheus": "^0.48.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.48.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.48.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.48.0",
    "@opentelemetry/instrumentation-pino": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "node-cache": "^5.1.2",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4",
    "clickhouse": "^2.6.0",
    "dotenv": "^16.3.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.3",
    "@types/supertest": "^2.0.16",
    "docker-compose": "^0.24.0"
  }
} 