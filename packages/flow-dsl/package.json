{
  "name": "@fusionflow/flow-dsl",
  "version": "0.1.0",
  "description": "Domain Specific Language for FusionFlow data flows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "validate-examples": "node scripts/validate-examples.js",
    "validate-schema": "node scripts/validate-schema.js",
    "security-check": "npm audit --audit-level moderate",
    "bundle-size": "du -sh dist/",
    "prepublishOnly": "npm run build && npm run test:run && npm run validate-examples",
    "ci:validate": "npm run type-check && npm run lint && npm run format:check",
    "ci:test": "npm run test:run && npm run test:coverage",
    "ci:security": "npm run security-check",
    "ci:build": "npm run build && npm run bundle-size"
  },
  "dependencies": {
    "@fusionflow/common": "workspace:*",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.9.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.34.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "fusionflow",
    "dsl",
    "flow",
    "yaml",
    "workflow",
    "automation",
    "json-schema",
    "validation"
  ],
  "author": "FusionFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fusionflow/fusionflow.git",
    "directory": "packages/flow-dsl"
  },
  "bugs": {
    "url": "https://github.com/fusionflow/fusionflow/issues"
  },
  "homepage": "https://github.com/fusionflow/fusionflow#readme",
  "files": [
    "dist/**/*",
    "schema/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
