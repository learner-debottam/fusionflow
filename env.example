# FusionFlow Environment Configuration
# Copy this file to .env and update values as needed

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15 minutes
RATE_LIMIT_ALLOWLIST=127.0.0.1,::1

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=fusionflow-api
OTEL_SERVICE_VERSION=0.1.0
OTEL_TRACE_EXPORTER=console
OTEL_METRIC_EXPORTER=console
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SAMPLING_RATE=1.0
OTEL_AUTO_INSTRUMENTATION=true
OTEL_METRICS_ENABLED=true
OTEL_TRACES_ENABLED=true
OTEL_AUTO_INIT=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://fusionflow:password@localhost:5432/fusionflow
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# API Keys
API_KEY_SECRET=your-api-key-secret-change-in-production

# External Services
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_TEMP_DIR=/tmp/fusionflow

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/fusionflow.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_RATE_LIMIT_ENABLED=true

# Development
DEV_HOT_RELOAD=true
DEV_DEBUG_PORT=9229
DEV_SOURCE_MAPS=true 